<Window x:Class="TextSinLiner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextSinLiner"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Canvas Height="20" Width="200"
                Margin="-27,20,0,0"
                x:Name="canvas1"
                
                />
        <Button HorizontalAlignment="Left"
               Click="DrawButton_Click"
            x:Name="DrawButton" Height="20" Width="100" Margin="100,60,0,0"/>
        <TextBox  Margin="0,-40,0,0"
                  TextChanged="inputTextBox_TextChanged"
                  
                  
            x:Name="inputTextBox" Width="200" Height="20"/>
    </Grid>
</Window>
